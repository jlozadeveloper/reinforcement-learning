{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug project",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "O:\\programming\\reinforcement-learning"
            },
            "justMyCode": false
        },
        {
            "name": "Run project",
            "type": "node-terminal",
            "request": "launch",
            "command": "${workspaceFolder}/.venv/bin/python ${workspaceFolder}/main.py",
            "cwd": "${workspaceFolder}",
            "presentation": {
              "reveal": "always",
            },
            "env": {
                "PYTHONPATH": "O:\\programming\\reinforcement-learning"
            }
        }
    ]
}